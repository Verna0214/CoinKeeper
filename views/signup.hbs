<div class="container m-5">
  <div class="row">
    <div class="col-12 col-md-5">
      <img src="https://1.bp.blogspot.com/-A7-vqS6N7UE/U1T3wJHuVbI/AAAAAAAAfWY/iMVPwcUxZTw/s400/figure_ta-da.png" alt="">
    </div>
    <div class="col-12 col-md-7">
      <h1>Create your account</h1>
      <h5 class="mt-3 mb-4 fst-italic">Have an account？ <a href="/signin" style="text-decoration: none;">Log in now！</a></h5>
      {{> messages}}
      <form class="form-signup" action="/signup" method="POST" style="width: 60%;">
        <div class="form-group mb-3">
          <i class="fa-solid fa-user me-2"></i>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
            <label for="name">Name</label>
          </div>
          <i class="fa-solid fa-envelope me-2"></i>
          <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
            <label for="email">Email address</label>
          </div>
          <i class="fa-solid fa-lock me-2"></i>
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="off" required>
            <label for="password">Password</label>
          </div>
          <i class="fa-solid fa-lock me-2"></i>
          <div class="form-floating mb-3">
            <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Password Confirm" autocomplete="off" required>
            <label for="passwordConfirm">Password Confirm</label>
          </div>
        </div>
        <button class="btn btn-primary btn-block" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>