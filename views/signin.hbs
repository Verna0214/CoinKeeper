<div class="container m-5">
  <div class="row">
    <div class="col-12 col-md-6">
      <h1>Log in to your account</h1>
      <h5 class="mt-3 mb-5 fst-italic">Don't have an account？ <a href="/signup" style="text-decoration: none;">Sign UP！</a></h5>
      {{> messages}}
      <form class="form-signin" action="/signin" method="POST" style="width: 85%;">
        <div class="form-row mb-3">
          <label class="form-label" for="email"><i class="fa-solid fa-envelope me-2"></i></label>
          <input type="text" id="email" name="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="form-row mb-3">
          <label class="form-label" for="password"><i class="fa-solid fa-lock me-2"></i></label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
        </div>
        <button class="btn btn-primary btn-block" type="submit">Login</button>
      </form>
    </div>
    <div class="col-12 col-md-6 p-5">
      <img src="https://1.bp.blogspot.com/-l4Xa9FbvkWE/XXXOfQfo-wI/AAAAAAABUuk/IphjktvChUAJTJnF8OiJLa8p9iX1KG5xQCLcBGAs/s400/figure_tsumitate.png" alt="">
    </div>
  </div>
</div>